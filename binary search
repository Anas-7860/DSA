#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, 2, 3, 4, 5,100},flag = 0;
    int search = 100;
    int high = 5;
    int low = 0;
     
    while (low <= high) {
        int mid = (low + high) / 2;  // Calculate mid correctly
        if (arr[mid] == search) {
          flag = 1;
            break;
        } else if (arr[mid] < search) {
            low = mid + 1;
        } else if (arr[mid] > search) {
            high = mid - 1;
        } else {
            flag =0;
        }
    }
    if(flag ==1){
        cout<<"element found ";
    }else cout<<"element not found !";

    return 0;
}
