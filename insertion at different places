#include <iostream>
using namespace std;
int main() {     // 1 3 10
int size =8;
  int A[size]={2,5,7,9,11},a,b,c;
      // printing array
      cout<<"oritginal ARRAY :-"<<endl;
      for(int i=0;i<5;i++){
          cout<<A[i]<<" ";
      }cout<<endl;
    cout<<"Enter no you want to insert at begginning :";
    cin>>a;
    cout<<"inserting "<<a<<" at begginning :-"<<endl;
      for(int i=size-2;i>0;i--){
          A[i]=A[i-1];
      }
      A[0]=a;
      for(int i=0;i<6;i++){
          cout<<A[i]<<" ";
      }cout<<endl;
      cout<<"Enter no you want to insert at 2nd index :";
      cin>>b;
      cout<<"inserting "<<b<<" at 2nd index :-"<<endl;
      for(int i=size-1;i>=2;i--){
          A[i]=A[i-1];
      }
       A[2]=b;
        for(int i=0;i<7;i++){
          cout<<A[i]<<" ";
      }cout<<endl;
      cout<<"Enter no you want to insert at the end :";
      cin>>c;
         cout<<"inserting "<<c<<" at the end :-"<<endl;
       A[size-1]=c;
       for(int i=0;i<size;i++){
          cout<<A[i]<<" ";
      }
    return 0;
}
